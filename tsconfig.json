{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "ES6",
      "DOM",
      "ES5",
      "esnext",
      "DOM.Iterable"
    ],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
